// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String     @map("password_hash")
  role         Role       @default(VIEWER)
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")
  
  // Relations
  loginOtps    LoginOtp[]
  auditLogs    AuditLog[]

  @@map("users")
}

model LoginOtp {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  otpHash   String   @map("otp_hash")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("login_otps")
}

model Project {
  id          String     @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  
  // Relations
  databases   Database[]

  @@map("projects")
}

model Database {
  id                          String      @id @default(uuid())
  projectId                   String?     @map("project_id")
  name                        String
  websiteUrl                  String?     @map("website_url")
  description                 String?
  host                        String
  port                        Int         @default(5432)
  databaseName                String      @map("database_name")
  username                    String
  passwordEncrypted           String      @map("password_encrypted")
  environment                 Environment
  readOnly                    Boolean     @default(true) @map("read_only")
  editEnabled                 Boolean     @default(false) @map("edit_enabled")
  extraConfirmationRequired   Boolean     @default(true) @map("extra_confirmation_required")
  isActive                    Boolean     @default(true) @map("is_active")
  createdAt                   DateTime    @default(now()) @map("created_at")
  updatedAt                   DateTime    @updatedAt @map("updated_at")
  
  // Relations
  project   Project?   @relation(fields: [projectId], references: [id], onDelete: SetNull)
  auditLogs AuditLog[]

  @@map("databases")
}

model AuditLog {
  id           String   @id @default(uuid())
  userId       String?  @map("user_id")
  userEmail    String   @map("user_email")
  databaseId   String?  @map("database_id")
  databaseName String   @map("database_name")
  tableName    String   @map("table_name")
  rowId        String?  @map("row_id")
  action       String
  beforeData   Json?    @map("before_data")
  afterData    Json?    @map("after_data")
  ipAddress    String?  @map("ip_address")
  timestamp    DateTime @default(now())
  
  // Relations
  user     User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  database Database? @relation(fields: [databaseId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([databaseId])
  @@index([timestamp])
  @@map("audit_logs")
}

enum Role {
  ADMIN
  VIEWER
}

enum Environment {
  prod
  staging
  dev
}